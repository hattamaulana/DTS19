<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_refresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="32dp"
        android:paddingStart="8dp"
        android:paddingEnd="12dp"
        android:background="@drawable/refresh_wrapper"
        />

    <ImageView
        android:id="@+id/icBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:src="@drawable/ic_back"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/icBack"
        app:layout_constraintTop_toTopOf="@+id/icBack"
        android:layout_marginTop="4dp"
        android:text="Weight Diary"
        android:textColor="@color/textFlat"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="BMI Calculator"
        android:textColor="#fff"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icBack" />

    <RadioGroup
        android:id="@+id/genderWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/edtWeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bgFlat"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            >

            <RadioButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="16dp"
                android:layout_marginTop="24dp"
                android:checked="true"
                android:background="@drawable/ic_male_passive"
                android:button="@android:color/transparent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="@color/textFlat"
                android:layout_marginBottom="16dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/textFlat"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            >

            <RadioButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/ic_female_active"
                android:button="@android:color/transparent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="#fff"
                android:layout_marginBottom="16dp"
                />

        </LinearLayout>

    </RadioGroup>

    <!-- Start Weight -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="kg"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/edtWeight"
        app:layout_constraintTop_toTopOf="@id/edtWeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edtWeight"
        />

    <EditText
        android:id="@+id/edtWeight"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/edtHeight"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="28dp"
        android:layout_marginRight="48dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="0"
        android:textSize="36sp"
        android:textColor="#aaa"
        android:background="@drawable/edit_text_background"
        android:gravity="center"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/minusbtn"
        app:layout_constraintBottom_toBottomOf="@id/edtWeight"
        app:layout_constraintEnd_toEndOf="@id/edtWeight"
        app:layout_constraintTop_toTopOf="@id/edtWeight"
        android:layout_marginEnd="136dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plusbtn"
        app:layout_constraintBottom_toBottomOf="@id/edtWeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/edtWeight"
        android:layout_marginEnd="36dp"
        />
    <!-- End Weight-->

    <!-- Start Height -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cm"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/edtHeight"
        app:layout_constraintEnd_toStartOf="@id/edtHeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/edtHeight" />

        <EditText
            android:id="@+id/edtHeight"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/edtAge"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="28dp"
            android:layout_marginRight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="0"
            android:textSize="36sp"
            android:textColor="#aaa"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/minusbtn"
            app:layout_constraintBottom_toBottomOf="@id/edtHeight"
            app:layout_constraintEnd_toEndOf="@id/edtHeight"
            app:layout_constraintTop_toTopOf="@id/edtHeight"
            android:layout_marginEnd="136dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plusbtn"
            app:layout_constraintBottom_toBottomOf="@id/edtHeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/edtHeight"
            android:layout_marginEnd="36dp"
            />
    <!-- End Height-->

    <!-- Start Age -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="age"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/edtAge"
            app:layout_constraintTop_toTopOf="@id/edtAge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/edtAge"
            />

        <EditText
            android:id="@+id/edtAge"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/btnCalculate"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="48dp"
            android:layout_marginRight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="0"
            android:textSize="36sp"
            android:textColor="#aaa"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/minusbtn"
            app:layout_constraintBottom_toBottomOf="@id/edtAge"
            app:layout_constraintEnd_toEndOf="@id/edtAge"
            app:layout_constraintTop_toTopOf="@id/edtAge"
            android:layout_marginEnd="136dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plusbtn"
            app:layout_constraintBottom_toBottomOf="@id/edtAge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/edtAge"
            android:layout_marginEnd="36dp"
            />
    <!-- End Age -->

    <ImageView
        android:id="@+id/btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"
        android:src="@drawable/calculate_btn"
        android:clickable="true"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
