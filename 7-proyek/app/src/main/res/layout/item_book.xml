<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="32dp"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBook"
            android:layout_width="71dp"
            android:layout_height="107dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/sk2k"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/lblBookTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:text="Sepasang Kaos Kaki Hitam"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#384F7D"
            app:layout_constraintStart_toEndOf="@+id/imgBook"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/lblWriter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Ari Ginting"
            android:textColor="#384F7D"
            app:layout_constraintTop_toBottomOf="@+id/lblBookTitle"
            app:layout_constraintStart_toEndOf="@id/imgBook"
            />

        <ImageView
            android:id="@+id/imgStar1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_star_passive"
            app:layout_constraintBottom_toBottomOf="@id/imgBook"
            app:layout_constraintStart_toStartOf="@id/lblWriter"
            />

        <ImageView
            android:id="@+id/imgStar2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_star_passive"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@id/imgBook"
            app:layout_constraintStart_toEndOf="@id/imgStar1"
            />

        <ImageView
            android:id="@+id/imgStar3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_star_passive"
            app:layout_constraintBottom_toBottomOf="@id/imgBook"
            app:layout_constraintStart_toEndOf="@id/imgStar2"
            />

        <ImageView
            android:id="@+id/imgStar4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_star_passive"
            app:layout_constraintBottom_toBottomOf="@id/imgBook"
            app:layout_constraintStart_toEndOf="@id/imgStar3"
            />

        <ImageView
            android:id="@+id/imgStar5"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_star_passive"
            app:layout_constraintBottom_toBottomOf="@id/imgBook"
            app:layout_constraintStart_toEndOf="@id/imgStar4"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>