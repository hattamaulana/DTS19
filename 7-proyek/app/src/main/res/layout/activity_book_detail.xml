<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetailActivity">

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Book Review"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    
    <ImageView
        android:id="@+id/imgBook"
        android:layout_width="130dp"
        android:layout_height="203dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/sk2k"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/lblTitle"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/lblBookTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="56dp"
        android:text="Sepasang Kaos Kaki Hitam"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/imgBook"
        app:layout_constraintStart_toEndOf="@id/imgBook"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/lblWriter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ari Ginting"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/lblBookTitle"
        app:layout_constraintStart_toStartOf="@id/lblBookTitle"
        app:layout_constraintTop_toBottomOf="@id/lblBookTitle"
        />

    <ImageView
        android:id="@+id/imgStar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_star_3d"
        app:layout_constraintStart_toStartOf="@+id/lblBookTitle"
        app:layout_constraintTop_toBottomOf="@id/lblWriter"
        />

    <TextView
        android:id="@+id/lblStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="4"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/imgStar"
        app:layout_constraintStart_toEndOf="@id/imgStar"
        app:layout_constraintTop_toTopOf="@id/imgStar"
        />

    <TextView
        android:id="@+id/textSynopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        android:text="Synopsis"
        app:layout_constraintTop_toBottomOf="@id/imgBook"
        app:layout_constraintStart_toStartOf="@id/imgBook"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:text="@string/txt_sinopsis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSynopsis"
        />

</androidx.constraintlayout.widget.ConstraintLayout>